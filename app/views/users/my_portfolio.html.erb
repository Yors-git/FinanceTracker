<h1>My Portfolio</h1>

<div class="search-area">
  <h3>Search Coins</h3>
  <%= form_with url: search_coin_path, method: :get do |form| %>
    <div class="col-8">
      <div class="input-group input-group-lg">
          <%= form.text_field :coin, autofocus: true, class: 'form-control', placeholder: 'Enter coin name or symbol' %>
          <%= button_tag type: :submit, class: 'btn btn-success' do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
      </div>
    </div>
  <% end %>
</div>
<% if @coin %>
  <div class="card card-header results-block mt-4">
    <strong>Symbol: </strong><%= @coin.ticker %>
    <strong>Name: </strong><%= @coin.name %>
    <strong>Price: </strong>$<%= @coin.last_price %>
  </div>
<% end %>
